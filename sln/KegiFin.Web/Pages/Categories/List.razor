@page "/categories"

@inherits ListCategoriesPage

<MudText Typo="Typo.h3" Class="mb-4">Categories</MudText>
<div class="d-flex justify-end">
    <MudButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        Class="mr-4"
        StartIcon="@Icons.Material.TwoTone.Add"
        Href="/categories/create">
        NEW CATEGORY
    </MudButton>
</div>

<MudPaper Class="p-4 mt-2">
    <MudDataGrid
        Items="@Categories"
        Hover="true"
        Striped="true"
        Dense="true"
        Breakpoint="Breakpoint.Sm"
        Filterable="true"
        QuickFilter="Filter"
        Hideable="true">
        
        <ToolBarContent>
            <MudText Typo="Typo.h6" Class="mb-2">Categories</MudText>
            <MudSpacer/>
            <MudTextField
                @bind-Value="@SearchTerm"
                Placeholder="Search"
                Clearable="true"
                Adornment="Adornment.Start"
                AdornmentIcon="@Icons.Material.Filled.Search"
                Immediate="true"
                IconSize="Size.Medium"
                Class="mt-0">
            </MudTextField>
        </ToolBarContent>

        <Columns>
            <PropertyColumn Property="x => x.Id" Title="ID"/>
            <PropertyColumn Property="x => x.Name" Title="Name"/>
            <PropertyColumn Property="x => x.Description" Title="Description"/>
            <TemplateColumn Class="d-flex justify-end">
                <CellTemplate>
                    <MudStack Row>
                        <MudIconButton
                            Icon="@Icons.Material.Filled.Edit"
                            Color="Color.Info"
                            Class="mr-2"
                            Href="@($"/categories/edit/{context.Item.Id}")"
                            aria-label="Edit"/>
                        
                        <MudIconButton
                            Icon="@Icons.Material.Filled.Delete"
                            Color="Color.Error"
                            aria-label="Delete"
                            OnClick="@(() => OnDeleteButtonClickAsync(context.Item.Id, context.Item.Name))"/>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
</MudPaper>
